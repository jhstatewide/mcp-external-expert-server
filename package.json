{
  "name": "mcp-external-expert",
  "version": "0.2.1",
  "description": "MCP server that allows primary LLMs to delegate sub-tasks to external expert models via APIs (Ollama, OpenAI-compatible)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mcp-external-expert-server": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    ".env.example"
  ],
  "scripts": {
    "dev": "node --enable-source-maps --loader ts-node/esm src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jhstatewide/mcp-external-expert-server.git"
  },
  "homepage": "https://github.com/jhstatewide/mcp-external-expert-server",
  "bugs": {
    "url": "https://github.com/jhstatewide/mcp-external-expert-server/issues"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "llm",
    "delegation",
    "ollama",
    "openai",
    "ai",
    "expert-system"
  ],
  "author": "Joshua Harding",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/cors": "^2.8.19",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
